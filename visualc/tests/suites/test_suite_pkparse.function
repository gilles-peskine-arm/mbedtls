/* BEGIN_CASE */
void pk_parse_key( data_t * buf, int result )
{
    mbed_pktop_t *pk;

    mbed_pk_init( &pk, NULL, NULL, NULL );

    TEST_ASSERT( mbedtls_pk_parse_key( pk, buf->x, buf->len, NULL, 0,
                        mbedtls_test_rnd_std_rand, NULL ) == result );

exit:
    mbed_pk_free( pk );
}
